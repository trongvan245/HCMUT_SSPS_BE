generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  STUDENT
}

enum PrinterStatus {
  AVAILABLE
  NOT_AVAILABLE
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  password String

  mssv     String  @default("0000000")

  facultyName String @default("KHMT")


  name String @default("Anonymous")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  totalPages Int @default(0)//new field: get from sum printingrecord.pages
  remainPages Int @default(100)
  maxPages Int @default(100)
  role           UserRole         @default(STUDENT)
  printingRecord PrintingRecord[]

  @@map("users")
}

model Printer {
  id       String        @id @default(uuid())
  name     String
  status   PrinterStatus @default(AVAILABLE)
  building String        @default("B1")
  campsite String        @default("Campsite 1")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  totalPages Int @default(0)//new field: get from sum printingrecord.pages
  remainPages Int @default(100)
  printingRecord PrintingRecord[]

  @@map("printers")
}

model PrintingRecord {
  id       String @id @default(uuid())
  url      String
  fileName String
  filesize Int  @default(1024)
  copies   Int    
  pages    Int

  userId String
  user   User   @relation(fields: [userId], references: [id])

  printerId String
  printer   Printer @relation(fields: [printerId], references: [id])

  createAt DateTime @default(now())
  updateAt DateTime @default(now()) @updatedAt

  @@map("printing_records")
}

model AllowedFileType {
  id    Int    @id @default(autoincrement())
  types Json
}

model AllowType {
  id    Int    @id @default(autoincrement())
  typeName String @unique 
}